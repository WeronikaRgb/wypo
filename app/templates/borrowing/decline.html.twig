    {{'decline_borrowings'|trans}}
{% endblock %}


{% block body %}

                <h1>{{'decline_borrowings'|trans}}</h1>

                <div class="invisible">
                    {{ form_start(form, {method: 'DELETE', action: url('borrowing_decline', {id: borrowing.id}) }) }}
                    {{ form_widget(form) }}
                </div>
                <div class="form-group row float-sm-right">
                    <input type="submit" value="{{'action_decline_borrowing'|trans}}" class="btn btn-primary" >
