<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
    <a class="navbar-brand" >WYPOŻYCZALNIA KSIĄŻEK</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">

        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div>{{ app.user.email }}</div>
            <div>
                <a href="{{ url('app_logout') }}">{{ 'action_logout'|trans }}</a>
            </div>
        {% else %}
            <div>
                <a href="{{ url('app_login') }}">{{ 'action_login'|trans }}</a>
            </div>
        {% endif %}
        <ul class="navbar-nav">
            {% if is_granted ('ROLE_ADMIN') %}
            <li class="nav-item">
                <a class="nav-link" href="{{ url('user_index') }}">Users</a>
            </li>
            {% endif %}
            <li class="nav-item">
                <a class="nav-link" href="{{ url('book_index') }}">Books</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('category_index') }}">Categories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('borrowing_create') }}">Create Borrowing</a>
            </li>
            {% if is_granted ('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('manage_borrowing') }}">Manage borrowing</a>
                </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('category_create') }}">Create category</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('book_create') }} "title="{{ 'book_create'|trans }}">
                    {{ 'book_create'|trans }} </a>
            </li>
            {% endif %}
        </ul>
    </div>
</nav>

<div class="container-fluid">
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}" role="alert">
                {{ message|trans }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</div>

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>